<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Lyshirts</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= stylesheet_link_tag "application", :media => "all" %>		
		<%= csrf_meta_tags %>
		
	</head>
	<body>
		<header>
			<div class="navbar navbar-inverse navbar-fixed-top">
				<div class="navbar-inner">
					<div class="container">
						<%= link_to "Lyshirts", shirts_path, class: 'brand' %>					
						<ul class="nav">
							<li><%= link_to "About Us", about_path %></li>						
						</ul>

						<ul class="nav pull-right login">
							<% if admin_user_signed_in? %>
							  <li><%= link_to "Add Shirt", new_shirt_path %></li>
							  <li><%= link_to "Add Affiliate", new_affiliate_path %></li>
							  <li class="login"><%= link_to "Log out", logout_path, method: :delete %></li>
							<% else %>
							  <li><%= link_to "Login", login_path %></li>
						    <% end %>
						</ul>
					</div>
				</div>
			</div>
		</header>
		<section>
			<div id="main-content" class="container">
				<% flash.each do |type, message| %>
					<div class="alert <%= flash_class type %>">
						<button class="close" data-dismiss="alert">Ã—</button>
						<%= message %>
					</div>
				<% end %>

				<%= yield %>
			</div>
		</section>
		<footer>
			<hr />
			<div class="footer"></div>
		</footer>
		<%= javascript_include_tag "application" %>
	</body>
</html>
